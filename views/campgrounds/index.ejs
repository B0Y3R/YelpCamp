<% include ../partails/header %>

<div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1 style="text-align: center;">Welcome To YelpCamp</h1>
                <p style="text-align: center;">View our hand-picked campgrounds from all over the World!</p>
                <p>
                    <form action="/campgrounds" method="GET" class="form-inline" style="Display: block; text-align: center">
                        <div class="form-group">
                            <a class ="btn btn-primary btn-large" href="/campgrounds/new">Add a new Campground!</a>
                            <input type="text" name="search" placeholder="Campground search..." class="form-control" >
                            <input type="submit" value="Search" class="btn btn-default">
                        </div>
                    </form>
                </p>
            </div>
        </header>
    
    <div class="row">
        <div class="col-lg-12"></div>
        <h2 style="text-align: center">Our Most popular Campgrounds!</h2>
    </div>
     <hr>
    <div class="row text-center" class="flex">
        <div class="col-md-12">
            <% if(noMatch) { %>
            <h3><%= noMatch %></h3>
            <% } %>
        </div>
        <% campgrounds.forEach(function(campground) {%>
            <div class="col-md-3" "col-sm-6">
                <div class="thumbnail" class="inside">
                     <div class="image" style="background-image: url(<%= campground.image %>)"></div>
                     <div class="caption">
                        <h4><%= campground.name %></h4> 
                     </div>
                         <p>
                             <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                         </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>


<% include ../partails/footer %>